<div class="container">

  <div class="row text-center">
    <div class="col-md-12 mt-4">
      <%= image_tag @user.get_profile_image(100,100) %>
      <h3><strong>
        <% if @user.user_name.present? %>
          <%= @user.user_name%><!--ユーザーネーム-->
        <% else %>
          <%= @user.first_name + @user.last_name %>
        <% end %>
      </strong></h3>

      <!--フォローする or しない-->
      <% if current_user != @user %>
        <% if current_user.following?(@user) %>
          <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST %>
        <% end %>
      <% end %>

      <!--投稿数-->
      <div class="col-md-12 d-flex" style="margin-left:270px;">
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @posts.count %>
          </strong>
          投稿数
        </div>
      <!--フォロー中-->
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @user.follower.count %>
          </strong>
          <%= link_to "フォロー中",user_following_path(@user) %>
        </div>
      <!--フォロワー-->
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @user.followed.count %>
          </strong>
          <%= link_to "フォロワー",user_follower_path(@user) %>
        </div>
      </div>
    </div>
  </div>

  <!--自己紹介-->
  <div class="row mt-4">
    <div class="col-md-5" style="margin-left:22%;">
      <h6>
        <strong>自己紹介</strong>
      </h6>
      <div class="border border-dark" style="height:200px; width:650px; padding:10px; overflow: scroll; overflow-x: hidden;">
        <% if @user.introduction.present? %>
         <%= @user.introduction %>
        <% else %>
          <p style="opacity:0.5">※自己紹介は設定されていません</p>
        <% end %>
      </div>
    </div>
  </div>
  <!--過去投稿一覧-->
  <div class="row mt-4">
    <div class="col-md-4" style="margin-left:22%;">
      <h6>
        <strong>投稿</strong>
      </h6>
      <div class="border border-dark border-5 rounded" style="width:650px; height:600px; overflow: scroll; overflow-x: hidden;">
        <table class="table table-borderless">
          <thead>
            <tr class="table-secondary">
              <th>名称</th>
              <th>住所</th>
              <th>詳細</th>
            </tr>
          </thead>
          <% @posts.each do |post| %>
          <tbody>
            <tr>
              <td><%= post.name %></td>　　<!--投稿場所-->
              <td><%= post.address %></td>
              <td><%= link_to "詳細",post_path(post.id) %></td>   <!--投稿詳細へのリンク-->
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>

  <!--ユーザーの通報-->
  <div class="row text-center">
    <div class="col-md-12 mt-3">
      <% if @user != current_user %>
        <%= link_to "このユーザーを通報する", new_user_report_path(@user), class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>

</div>