<div class="container">

  <div class="row text-center">
    <div class="col-md-12 mt-4">
      <%= image_tag @user.get_profile_image(100,100) %>
      <h3><strong>
        <% if @user.user_name.present? %>
          <%= @user.user_name%><!--ユーザーネーム-->
        <% else %>
          <%= @user.first_name + @user.last_name %>
        <% end %>
      </strong></h3>

      <!--フォローする or しない-->
      <% if current_user != @user %>
        <% if current_user.following?(@user) %>
          <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "unset-follow-button" %>
        <% else %>
          <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "follow-button" %>
        <% end %>
      <% end %>

      <!--投稿数-->
      <div class="col-md-8 text-center d-flex justify-content-center" style="margin: 0 auto;">
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @posts.count %>
          </strong>
          投稿数
        </div>
      <!--フォロー中-->
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @user.follower.count %>
          </strong>
          <%= link_to "フォロー中",user_following_path(@user) %>
        </div>
      <!--フォロワー-->
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @user.followed.count %>
          </strong>
          <%= link_to "フォロワー",user_follower_path(@user) %>
        </div>
      </div>
      
    </div>
  </div>

  <!--自己紹介-->
  <div class="row mt-4">
    <div class="col-md-12" style="margin: 0 auto;">
      <h6 class="text-center">
        <strong>自己紹介</strong>
      </h6>
      <div class="border border-dark" style="height:200px; width:650px; margin: 0 auto; padding:10px; overflow: scroll; overflow-x: hidden;">
        <% if @user.introduction.present? %>
         <%= @user.introduction %>
        <% else %>
          <p style="opacity:0.5">※自己紹介は設定されていません</p>
        <% end %>
      </div>
    </div>
  </div>
  
  <!--過去投稿一覧-->
  <%= render 'posted', posts: @posts %>

  <!--ユーザーの通報-->
  <div class="row text-center">
    <div class="col-md-12 mt-3">
      <% if @user != current_user %>
        <%= link_to "このユーザーを通報する", new_user_report_path(@user), class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>

</div>