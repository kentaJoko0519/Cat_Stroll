<div class="container">
  <div class="row mt-4">
    <div class="col-md-10 mt-4 mx-auto">
      <h3 class="text-center">
        <strong>登録情報編集</strong>
      </h3>
      <%= form_with model: @user,url: user_path, method: :patch do |f| %>

        <div class="form-group my-5">
          <%= f.label :profile_image, 'プロフィール画像', class: "font-weight-bold" %>
          <div class="row">
            <div class="col-12 col-md-6 mt-2 mt-md-0">
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
          </div>
        </div>

        <div class="form-group my-5">
          <%= f.label :name, '氏名', class: "font-weight-bold" %>
          <div class="row">
            <div class="col-12 col-md-6">
              <%= f.label :first_name, '(姓)' %>
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
            <div class="col-12 col-md-6 mt-2 mt-md-0">
              <%= f.label :last_name, '(名)' %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group mt-5">
          <%= f.label :name_kana, 'フリガナ', class: "font-weight-bold" %>
          <div class="row">
            <div class="col-12 col-md-6">
              <%= f.label :first_name_kana, '(セイ)' %>
              <%= f.text_field :first_name_kana, class: 'form-control' %>
            </div>
            <div class="col-12 col-md-6 mt-2 mt-md-0">
              <%= f.label :last_name_kana, '(メイ)' %>
              <%= f.text_field :last_name_kana, class: 'form-control' %>
            </div>
          </div>
        </div>
        
        <div class="form-group mt-5">
          <div class="row">
            <div class="col-12 col-md-12">
              <%= f.label :user_name, 'ユーザーネーム', class: "font-weight-bold" %>
              <%= f.text_field :user_name, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group mt-5">
          <div class="row">
            <div class="col-12 col-md-12">
              <%= f.label :email, 'メールアドレス', class: "font-weight-bold" %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="form-group mt-5">
          <div class="row">
            <div class="col-12 col-md-12">
              <%= f.label :introduction, '自己紹介', class: "font-weight-bold" %>
              <%= f.email_field :introduction, class: 'form-control', style: "height: 300px;" %>
            </div>
          </div>
        </div>

        <div class="text-center mt-5">
          <button class="update-btn-hover color-update">
            update
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-12 text-center">
      <p>
        <strong>退会はこちらから</strong>
      </p>

      <div class="row cf">
        <div class="six col">
          <%=link_to "退会する", unsubscribe_path, id: "unsubscribe-button", class: "unsubscribe" %>
        </div>
      </div>

    </div>
  </div>

</div>


