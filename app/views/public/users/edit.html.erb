<div class="container">
  <div class="row mt-4">
    <div class="col-md-10" style="margin: 0 auto;">
      <h3 class="text-center">
        <strong>登録情報編集</strong>
      </h3>
      <%= form_with model: @user,url: user_path, method: :patch do |f| %>
        <table class="table table-borderless" style="margin-left: 14%;">
          <tr>
            <td>プロフィール画像</td>
            <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <td>ユーザーネーム</td>
            <td><%= f.text_field :user_name, style: "width:400px;" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, style: "width:400px;" %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= f.text_area :introduction, style: "width:400px; height:150px; overflow: scroll; overflow-x: hidden;" %></td>
          </tr>
        </table>
        
        <div class="text-center">
          <button class="update-btn-hover color-update">
            update
          </button>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-md-12 text-center">
      <p>
        <strong>退会はこちらから</strong>
      </p>
      
      <div class="row cf">
        <div class="six col">
          <%=link_to "退会する", unsubscribe_path, id: "unsubscribe-button", class: "unsubscribe" %>
        </div>
      </div>
        
    </div>
  </div>
  
</div>


