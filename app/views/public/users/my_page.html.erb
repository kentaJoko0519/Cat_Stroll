<div class="container">
  
  <div class="row mt-4">
    <div class="col-md-12 text-center">
      <h3><strong>マイページ</strong></h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10 mt-1" style="margin-left:10%;">
      <div class="d-flex">
        <h5><strong>登録情報</strong></h5>
        <%= link_to "ブックマークを見る", post_favorite_path(@user), style: "margin-left:70%;" %>
      </div>
      <table class="table text-center">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>氏名</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= @user.first_name %>  <%= @user.last_name %>
            </td>
            <td>
              <% if @user.user_name.present? %>
                <%= @user.user_name %>
              <% else %>
                <p style="opacity:0.5">※ユーザーネームは設定されていません</p>
              <% end %>
            </td>
            <td>
              <%= @user.email %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12 text-center mb-3">
       <!--投稿数-->
      <div class="col-md-12 d-flex" style="margin-left:270px;">
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @posts.count %>
          </strong>
          投稿数
        </div>
      <!--フォロー中-->
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @user.follower.count %>
          </strong>
          <%= link_to "フォロー中",user_following_path(@user) %>
        </div>
      <!--フォロワー-->
        <div class="col-md-2 d-flex flex-column">
          <strong>
            <%= @user.followed.count %>
          </strong>
          <%= link_to "フォロワー",user_follower_path(@user) %>
        </div>
      </div>  
    </div>
  </div>

  <div class="row">
    <div class="d-flex">
      <div class="col-md-5">
        <h6><strong>自己紹介</strong></h6>
        <div class="border border-dark" style="height:200px; width:400px; padding:10px; overflow: scroll; overflow-x: hidden;;">
          <% if @user.introduction.present? %>
           <%= @user.introduction %>
          <% else %>
            <p style="opacity:0.5">※自己紹介は設定されていません</p>
          <% end %>
        </div>
      </div>
          <!--過去投稿一覧-->
      <div class="col-md-5">
        <h6>
          <strong>投稿</strong>
        </h6>
        <div class="border border-dark border-5 rounded" style="width:650px; height:200px; overflow: scroll; overflow-x: hidden;">
          <table class="table table-borderless">
            <thead>
              <tr class="table-secondary">
                <th>名称</th>
                <th>住所</th>
                <th>詳細</th>
              </tr>
            </thead>
            <% @posts.each do |post| %>
            <tbody>
              <tr>
                <td><%= post.name %></td>　　<!--投稿場所-->
                <td><%= post.address %></td>
                <td><%= link_to "詳細",post_path(post.id) %></td>   <!--投稿詳細へのリンク-->
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12 text-center">
      <div class="mt-3">
        <%= link_to "編集する",edit_user_path(@user), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

</div>