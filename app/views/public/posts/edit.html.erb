<div class="container">

  <div class="row">
    <div class="col-md-12 mt-4 text-center">
      <h3><strong>投稿編集</strong></h3>
    </div>
  </div>

<!--編集する投稿場所の情報-->
  <div class="row" style="margin-left:200px">
    <div class="col-md-12">
      <table class="table table-borderless">
        <tr>
          <td>名称</td>
          <td><%= @post.name %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @post.address %></td>
        </tr>
        <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
        <tr>
          <td>投稿文</td>
          <td><%= f.text_area :introduction, style: "width: 500px; height:300px;" %></td>
        </tr>
        <tr>
          <td>画像(複数選択可)</td>
          <td><%= f.file_field :images, placeholder: "画像", accept: "image/*", multiple: true %></td>
        </tr>
      </table>
      <%= f.submit '更新する', class: "btn btn-success", style: "margin-left:35%" %>
      <% end %>
    </div>
  </div>

</div>
