<div class="container">

  <div class="row">
    <div class="col-md-12 mt-3 text-center">
      <h5><strong>投稿編集</strong></h5>
    </div>
  </div>

  <div class="row" style="margin-left:200px">
    <div class="col-md-12">
      <table class="table table-borderless">
        <tr>
          <td>名称</td>
          <td><strong><%= @post.name %></strong></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @post.address %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row" style="margin-left:200px">
    <div class="col-md-12">
      <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>投稿文</td>
          <td><%= f.text_area :introduction, style: "width: 500px; height:300px;" %></td>
        </tr>
        <tr>
          <td>画像</td>
          <td><%= f.file_field :image, placeholder: "画像", accept: "image/*" %></td>
        </tr>
      </table>
      <%= f.submit '更新する', class: "btn btn-success", style: "margin-left:30px" %>
      <% end %>
    </div>
  </div>

</div>
