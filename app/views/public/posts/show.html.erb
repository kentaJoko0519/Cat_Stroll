<div class="container">


  <div class="row">
    <div class="col-md-12 mt-3 text-center">
      <h5><strong>投稿</strong></h5>
    </div>
  </div>
　<!--投稿者-->
  <div class="row">
    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <td class="col-md-3 text-center">
            <%= image_tag @user.get_profile_image(60,60) %>
          </td>
          <td style="margin-left:-100px;">
            <h5>
              <% if @user.user_name.present? %>
                <%= @user.user_name %>
              <% else %>
                <%= @user.first_name %>  <%= @user.last_name %>
              <% end %>
            </h5>
          </td>
        </tr>
      </table>

      <!--投稿画像-->
      <% if @post.images.attached? %>
      <!--カルーセル-->
        <div id="carousel" class="carousel slide" data-ride="carousel">
          <!-- カルーセルインジケーター -->
          <ol class="carousel-indicators">
            <% @post.images.each_with_index do |image, idx| %>
              <% if idx == 0 %>
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
              <% else %>
                <li data-target="#carousel" data-slide-to="<%= idx %>"></li>
              <% end %>
            <% end %>
          </ol>
          <!-- 画像 -->
          <div class="carousel-inner text-center">
            <% @post.images.each_with_index do |image, idx| %>
              <% if idx == 0 %>
                <div class="carousel-item active">
                  <%= image_tag @post.get_image(image, 600,400), style: 'width: 80%; height: 300px; object-fit: cover;' %>
                </div>
              <% else %>
                <div class="carousel-item">
                  <%= image_tag @post.get_image(image, 600,400), style: 'width: 80%; height: 300px; object-fit: cover;' %>
                </div>
              <% end %>
            <% end %>
          </div>
          <!-- カルーセルコントローラー -->
          <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <!--end-->
      <% end %>

      <!--投稿情報-->
      <table class="table table-border mt-4">
        <tr>
          <td>名称</td>
          <td><strong><%= @post.name %></strong></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @post.address %></td>
        </tr>
      </table>
      <div class="mt-5">
        <% if @user.id == @post.user_id %>
          <%= link_to "編集",edit_post_path(@post.id), class: "btn btn-secondary", style: "margin-left:200px;"%>
          <%= link_to "削除",post_path(@post), method: :delete, class: "btn btn-danger", style: "margin-left:50px;", "data-confirm" => "本当に削除しますか？"%>
        <% end %>
      </div>

    </div>

    <div class="col-md-6">
      <div class="post">
        <h6 class="text-center">
          <strong>投稿文</strong>
        </h6>
        <div class="border border-dark border-5 rounded" style="width:600px; height:400px; padding:5px;">
          <%= @post.introduction %>
        </div>
      </div>

      <div class="comment mt-4">
        <h6 class="text-center">
          <strong>コメント</strong>
          <p>コメント件数：<%= @post.comments.count %>件</p>
        </h6>
        <div class="border border-dark border-5 rounded" style="width:600px; height:100px; padding:5px;">
          <% @comments.each do |comment|%>
            <table class="table table-borderless table-sm">
              <tr>
                <td class="col-md-4">
                  <%= image_tag @user.get_profile_image(20,20) %>
                  <% if @user.user_name.present? %>
                    <%= link_to @user.user_name, user_path(@user.id), style: "fonnt-size: 8px; opacity:0.7;" %>
                  <% else %>
                    <%= link_to @user.first_name + @user.last_name, user_path(@user.id), style: "fonnt-size: 8px; opacity:0.7;" %>
                  <% end %>
                </td>
                <td class="ml-5">
                  <%= comment.sentence %>
                </td>
              </tr>
            </table>
          <% end %>
        </div>
        <div class="mt-3">
          <%= form_with model: [@post , @comment], url: comments_path, method: :post do |f| %>
            <%= f.text_area :sentence, rows: '5', placeholder: "コメントをここに", style: "width: 400px; height:50px;" %>
            <%= f.hidden_field :post_id, :value => @post.id %>
            <%= f.submit "送信する", class: "btn btn-success" %>
          <% end %>
        </div>

      </div>

    </div>
    

  </div>
</div>
