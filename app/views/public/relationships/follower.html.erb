<div class="container">
  <div class="row text-center mt-3">
    <div class="col-md-12">
      <h3>
        <strong>
          フォロワー
        </strong>
      </h3>
      <%= @follower_users.count %>人
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-8 border border-dark" style="margin-left:18%; height:500px; padding:10px; overflow: scroll; overflow-x: hidden;">
      <table class="table table-border table-sm ">
        <tbody>
          <% @follower_users.each do |follower_user| %>
            <tr>
              <td class="col-md-2">
                <%= image_tag follower_user.get_profile_image(70,70) %>
              </td>
              <td class="col-md-3">
                <% if follower_user.user_name.present? %>
                  <%= follower_user.user_name%><!--ユーザーネーム-->
                <% else %>
                  <%= follower_user.first_name %><%= follower_user.last_name %>
                <% end %>
              </td>
              <td  class="col-md-1"><%= link_to "詳細", user_path(follower_user.id)%></td>
              <td  class="col-md-2">
                <% if current_user != follower_user %>
                  <% if current_user.following?(follower_user) %>
                    <%= link_to 'フォロー外す', user_relationships_path(follower_user.id), method: :delete %>
                  <% else %>
                    <%= link_to 'フォローする', user_relationships_path(follower_user.id), method: :POST %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
