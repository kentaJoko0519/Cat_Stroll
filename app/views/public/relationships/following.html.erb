<div class="container">
  <div class="row text-center mt-4">
    <div class="col-md-12">
      <h4>
        <% if current_user != @user %>
          <%= @user.user_name %>
        <% else %>
        <% end %>
      </h4>
      <h5 class="mt-2">
        <%= @following_users.with_out_is_deleted.count %>人
        <strong class="ml-3">
          フォロー中
        </strong>
      </h5>
    </div>
  </div>

  <div class="row mt-1 text-center">
    <div class="col-md-6 following-list">
      <table class="table table-border table-hover table-sm">
        <tbody>
          <% @following_users.with_out_is_deleted.each do |following_user| %>
            <tr data-href="/users/<%= following_user.id %>">
              <td class="col-1 col-md-1 col-sm-4">
                <%= image_tag following_user.get_profile_image(70,70) %>
              </td>
              <td class="col-5 col-md-5 col-sm-8">
                <%= following_user.user_name%><!--ユーザーネーム-->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

  <script>
    $('tr[data-href]').click(function (e) {
      if (!$(e.target).is('a')) {
        window.location = $(e.target).closest('tr').data('href');
      };
    });
  </script>

</div>


