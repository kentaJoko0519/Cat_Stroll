<div class="container">
  <div class="row mt-3 text-center" style="margin-left:10%;">
    <div class="col-md-10">
      <h3 class="text-center">
        <strong>お気に入り一覧</strong>
      </h3>
      
      <div class="border border-dark border-5 rounded" style="height:545px; overflow: scroll; overflow-x: hidden;">
        <table class="table">
          <thead>
            <tr class="table-secondary">
              <th>投稿者名</th>
              <th>名称</th>
              <th>住所</th>
            </tr>
          </thead>
          <tbody>
            <% @bookmarks.each do |bookmark| %>
              <tr>
                <td>
                  <% if bookmark.post.user.user_name.present? %>
                    <%= bookmark.post.user.user_name %>
                  <% else %>
                    <%=  bookmark.post.user.first_name + bookmark.post.user.last_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to post_path(bookmark.post) do %>
                    <%= bookmark.post.name %>
                  <% end %>
                </td>
                <td><%= bookmark.post.address %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>