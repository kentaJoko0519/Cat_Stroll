<div class="container">
  <div class="row">
    <div class="col-md-12  text-center mt-5">
      <h3><strong>ログイン</strong></h3>
    </div>

    <div class="col-md-8 mt-4" style="margin-left:200px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>メールアドレス</td>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:90%" %>
            </td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td><%= f.password_field :password, autocomplete: "new-password", style: "width:60%" %></td>
          </tr>
        </table>

        <div class="col-md-12 text-center">
          <button class="session_button clip-path">
            ログイン
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row text-center" style="margin-left:350px;">
    <div class="col-md-3 mt-5" style="margin-left:10px;">
      <p>
        <%= link_to "パスワードを忘れた方", new_password_path(resource_name) %>
      </p>
    </div>
    <div class="col-md-3 mt-5" style="margin-left:10px;">
      <p>
        <%= link_to "新規登録へ", new_registration_path(resource_name) %>
      </p>
    </div>
  </div>

</div>