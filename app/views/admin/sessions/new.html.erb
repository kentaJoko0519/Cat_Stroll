<div class="container">
  <div class="row text-center mt-5">
    <div class="col-md-12">
      <h3>
        <strong>管理者ログイン</strong>
      </h3>
    </div>
    
    <div class="col-md-7 mt-3" style="margin-left:18%;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      　<table class="table">
      　   <tr>
      　     <td>
      　       メールアドレス
      　     </td>
      　     <td>
      　       <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:300px;" %>
      　     </td>
      　   </tr>
      　   <tr>
      　     <td>
      　       パスワード
      　     </td>
      　     <td>
      　       <%= f.password_field :password, autocomplete: "current-password", style: "width:300px;" %>
      　     </td>
      　   </tr>
      　</table>
        <%= f.submit "ログイン", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>