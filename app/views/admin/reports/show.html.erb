<div class="container">
  <div class="row text-center">
    <div class="col-md-12 mt-2">
      <h3>
        <strong>通報詳細</strong>
      </h3>
    </div>
  </div>
  
  <div class="row mt-1">
    <div class="col-md-6" style="margin: 0 auto;">
      <h5 class="mt-4">
        <strong>通報詳細情報</strong>
      </h5>
      <table class="table">
        <tr>
          <td>通報ID</td>
          <td>
            <%= @report.id %>
          </td>
        </tr>
        <tr>
          <td>通報されたユーザー</td>
          <td>
            <%= link_to @report.reported.user_name, edit_admin_user_path(@report.reported.id) %>
          </td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>
            <%= form_with model:@report, url:admin_report_path(@report), method: :patch, local: true do |f| %>
              <%= f.select :status, Report.statuses.keys.map { |k| [t("enums.report.status.#{k}"), k] } %>
              <%= f.submit '更新', style: "margin-left:5%;" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-md-6 mx-auto">
      <div class="text-center">
        通報者：
        <%= link_to @report.reporter.user_name, admin_user_path(@report.reporter.id) %>
      </div>
      <div>
        <h5>
          <strong>通報理由</strong>
        </h5>
        <div class="admin-report-reason">
          <%= @report.reason %>
        </div>
      </div>
    </div>
    
  </div>
  
</div>