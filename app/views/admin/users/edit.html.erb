<div class="container">
  <div class="row mt-3">
    <div class="col-md-12 text-center">
      <h3><strong>登録情報編集</strong></h3>
    </div>  
  </div>
  
  <div class="row">
    <div class="col-md-10 mt-3" style="margin-left:17%;">
      <%= form_with model: @user,url: admin_user_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>プロフィール画像</td>
            <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <td>ユーザーネーム</td>
            <td><%= f.text_field :user_name, style: "width:380px;" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, style: "width:380px;" %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= f.text_area :introduction, style: "width:400px" %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, :false %>有効
              <%= f.radio_button :is_deleted, :true, style: "margin-left:5%;" %>退会
            </td>
          </tr>
        </table>
        <div class="row">
          <div class="col">
            <%= f.submit'変更を保存', class: "btn btn-success", style: "margin-left:30%;" %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</div>