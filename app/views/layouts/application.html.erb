<!DOCTYPE html>
<html>
  <head>
    <title>猫の散歩</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <!--Header-->
    <header class=" border-bottom border-dark m-0" style="height:5%;">
        <div class="container">

        <!--トップロゴ-->
          <div class="row">
            <div class="col-md-12 text-center mt-1" strong="margin:0 auto;">
              <%= link_to "Cat Walk", root_path, style: "font-size:60px; color:#555555;" %>
            </div>
          </div>

          <div class="row">
            <!--ナビリスト-->
            <div class="col-md-12">
              <!--adminのログイン中のHeader-->
              <ul class="nav-list" style="">
                <% if admin_signed_in? %>
                  <li class="nav-list-item">
                    <%= link_to "ユーザー", admin_root_path, style: "color:#778899;" %>
                  </li>  
                  <li class="nav-list-item">
                    <%= link_to "投稿一覧", admin_posts_path, style: "color:#778899;" %>
                  </li>
                  <li class="nav-list-item">
                    <%= link_to "通報一覧", admin_reports_path, style: "color:#778899;" %>
                  </li>
                  <li class="nav-list-item">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, style: "color:#778899;" %>
                  </li>
                <!--publicのログイン中のHeader-->
                <% elsif user_signed_in? %>
                  <li class="nav-list-item">
                    <%= link_to "投稿", posts_path, style: "color:#778899;" %>
                  </li>
                  <li class="nav-list-item">
                    <%= link_to "ユーザー", users_path, style: "color:#778899;" %>
                  </li>
                  <li class="nav-list-item">
                    <%= link_to "マイページ", my_page_path, style: "color:#778899;" %>
                  </li>
                <!--ログアウト中のHeader-->
                <% else %>
                  <li class="nav-list-item">
                    <%= link_to "投稿", posts_path, style: "color:#778899;" %>
                  </li>
                  <li class="nav-list-item">
                    <%= link_to "新規登録", new_user_registration_path, style: "color:#778899;" %>
                  </li>
                  <li class="nav-list-item">
                    <%= link_to "ログイン", new_user_session_path, style: "color:#778899;" %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>


        </div>
    </header>
  <!--Main-->
    <main style="margin-bottom:50px;">
      <%= yield %>
    </main>
  <!--Footer-->
    <footer>
    </footer>
  </body>
</html>
